<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow (black 5%) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0D000000" />
            <corners android:radius="100px" />
            <padding 
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    
    <!-- Main background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_dark" />
            <corners android:radius="100px" />
        </shape>
    </item>
    
    <!-- Inner shadow (white 5%) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="100%"
                android:startColor="#00FFFFFF"
                android:endColor="#0DFFFFFF" />
            <corners android:radius="100px" />
        </shape>
    </item>
</layer-list>
