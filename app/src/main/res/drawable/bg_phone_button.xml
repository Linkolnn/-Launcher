<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#80FFD700" /> <!-- Semi-transparent yellow for focus -->
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="#FFD700" /> <!-- Yellow border -->
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66000000" /> <!-- Semi-transparent black -->
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>
