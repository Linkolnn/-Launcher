<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button styles -->
    <style name="YellowButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/accent_yellow</item>
        <item name="android:textColor">@color/background_dark</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Card styles -->
    <style name="SettingsCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/item_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="TitleText">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="AccentTitleText">
        <item name="android:textColor">@color/accent_yellow</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="BodyText">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="SecondaryText">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
