<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    
    <!-- Arrow pointing to the touch position (can be positioned top or bottom) -->
    <ImageView
        android:id="@+id/menu_arrow"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:src="@drawable/popup_menu_arrow"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="1dp"
        android:scaleType="fitCenter" />
    
    <!-- Menu container with rounded corners -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/popup_menu_background"
        android:elevation="6dp"
        android:padding="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">
        
        <!-- Settings -->
        <TextView
            android:id="@+id/menu_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройки главного экрана"
            android:textSize="@dimen/popup_menu_text_size"
            android:fontFamily="@font/mal6lampen"
            android:textColor="@android:color/white"
            android:padding="12dp"
             android:lineSpacingExtra="12dp"
            android:background="@drawable/simple_menu_selector"
            android:clickable="true"
            android:focusable="true" />
            
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#4A4A4A"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />
        
        <!-- Widgets -->
        <TextView
            android:id="@+id/menu_widgets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Виджеты"
            android:textSize="@dimen/popup_menu_text_size"
            android:fontFamily="@font/mal6lampen"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:background="@drawable/simple_menu_selector"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
    
</FrameLayout>
