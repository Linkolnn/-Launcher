<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="5dp"
    tools:context=".ui.SettingsActivity">
    
    <!-- Tab Bar -->
    <LinearLayout
        android:id="@+id/tabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
            
            <LinearLayout
                android:id="@+id/tabApplications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_tab_item"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true">
                
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_page_apps_new"
                    android:layout_marginEnd="8dp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applications"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:fontFamily="@font/lampen"
                    android:letterSpacing="0.02"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/tabSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_tab_item"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true">
                
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_settings_new"
                    android:layout_marginEnd="8dp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:fontFamily="@font/lampen"
                    android:letterSpacing="0.02"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>
        </LinearLayout>
    
    <!-- Settings Content -->
    <ScrollView
        android:id="@+id/settingsScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tabBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- Key Combination Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_settings_section_30"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Комбинация клавиш"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:fontFamily="@font/lampen"
                    android:layout_marginBottom="12dp" />
                
                <!-- Custom Key Combination -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/recordKeysButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="НАСТРОИТЬ КОМБИНАЦИЮ"
                        android:textColor="@color/background_dark"
                        android:textSize="14sp"
                        android:fontFamily="@font/mal6lampen"
                        app:backgroundTint="@color/accent_yellow"
                        app:cornerRadius="24dp" />
                    
                    <TextView
                        android:id="@+id/customKeysText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Комбинация не задана"
                        android:textColor="@color/accent_yellow"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        android:gravity="center" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Настройте последовательность клавиш для скрытия/показа приложений"
                        android:textColor="@color/text_gray"
                        android:textSize="11sp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:id="@+id/customKeysHint" />
                </LinearLayout>
            </LinearLayout>
            
            <!-- Grid Settings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_settings_section_30"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сетка рабочего стола"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:fontFamily="@font/lampen"
                    android:layout_marginBottom="12dp" />
                
                <RadioGroup
                    android:id="@+id/gridColumnsGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="-8dp"
                    android:paddingHorizontal="4dp">
                    
                    <RadioButton
                        android:id="@+id/grid3Columns"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="3"
                        android:textColor="@drawable/radio_text_color"
                        android:textSize="18sp"
                        android:fontFamily="@font/mal6lampen"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/bg_radio_selector"
                        android:layout_marginHorizontal="4dp" />
                    
                    <RadioButton
                        android:id="@+id/grid4Columns"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="4"
                        android:textColor="@drawable/radio_text_color"
                        android:textSize="18sp"
                        android:fontFamily="@font/mal6lampen"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/bg_radio_selector"
                        android:layout_marginHorizontal="4dp" />
                    
                    <RadioButton
                        android:id="@+id/grid5Columns"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="5"
                        android:textColor="@drawable/radio_text_color"
                        android:textSize="18sp"
                        android:fontFamily="@font/mal6lampen"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/bg_radio_selector"
                        android:layout_marginHorizontal="4dp" />
                </RadioGroup>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Количество столбцов на главном экране"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
            
            <!-- Features Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_settings_section_30"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Функционал"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:fontFamily="@font/lampen"
                    android:layout_marginBottom="12dp" />
                
                <!-- Close Apps on Hidden Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Закрывать окна в скрытом режиме"
                            android:textColor="@color/text_white"
                            android:textSize="14sp" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Автоматически закрывает открытые приложения при переходе в скрытый режим"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                    
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/closeAppsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:theme="@style/SwitchTheme" />
                </LinearLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_gray"
                    android:alpha="0.3"
                    android:layout_marginVertical="12dp" />
                
                <!-- Block Touch Sensor -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Блокировка сенсора экрана"
                            android:textColor="@color/text_white"
                            android:textSize="14sp" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Блокирует касания экрана в скрытом режиме для защиты от случайных нажатий"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                    
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/blockTouchSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:theme="@style/SwitchTheme" />
                </LinearLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_gray"
                    android:alpha="0.3"
                    android:layout_marginVertical="12dp" />
                
                <!-- Do Not Disturb -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Уведомления"
                            android:textColor="@color/text_white"
                            android:textSize="14sp" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Включает режим «Не беспокоить» в скрытом режиме для блокировки уведомлений"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                    
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/dndSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:theme="@style/SwitchTheme" />
                </LinearLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_gray"
                    android:alpha="0.3"
                    android:layout_marginVertical="12dp" />
                
                <!-- Hide Apps in Hidden Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Скрытие приложений в скрытом режиме"
                            android:textColor="@color/text_white"
                            android:textSize="14sp" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Скрывает приложения на главном экране при активации скрытого режима"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                    
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/hideAppsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:theme="@style/SwitchTheme" />
                </LinearLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_gray"
                    android:alpha="0.3"
                    android:layout_marginVertical="12dp" />
                
                <!-- Block Screenshots -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Блокировка скриншотов"
                            android:textColor="@color/text_white"
                            android:textSize="14sp" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Запрещает делать снимки экрана в скрытом режиме"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                    
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/blockScreenshotsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:theme="@style/SwitchTheme" />
                </LinearLayout>
            </LinearLayout>
            
            <!-- Icon Packs Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_settings_section_30"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Паки иконок"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:fontFamily="@font/lampen"
                    android:layout_marginBottom="12dp" />
                
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/iconPacksRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="-10dp"
                    android:clipToPadding="false"
                    android:paddingHorizontal="6dp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выберите пак иконок для применения в лаунчере"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
            
            <!-- Permissions Section -->
            <LinearLayout
                android:id="@+id/permissionsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_settings_section_30"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Необходимые разрешения"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:fontFamily="@font/lampen"
                    android:layout_marginBottom="12dp" />
                
                <!-- Accessibility Service -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    
                    <ImageView
                        android:id="@+id/accessibilityStatusIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_close"
                        android:layout_marginEnd="12dp" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Специальные возможности"
                            android:textColor="@color/text_white"
                            android:textSize="14sp" />
                        
                        <TextView
                            android:id="@+id/accessibilityStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Не включено"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/accessibilitySettingsButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="НАСТРОИТЬ"
                        android:textColor="@color/background_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/mal6lampen"
                        app:backgroundTint="@color/accent_yellow"
                        app:cornerRadius="20dp" />
                </LinearLayout>
                
                <!-- Overlay Permission (Touch Block) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    
                    <ImageView
                        android:id="@+id/overlayStatusIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_close"
                        android:layout_marginEnd="12dp" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Наложение поверх окон"
                            android:textColor="@color/text_white"
                            android:textSize="14sp" />
                        
                        <TextView
                            android:id="@+id/overlayStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Не включено"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/overlayPermissionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="НАСТРОИТЬ"
                        android:textColor="@color/background_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/mal6lampen"
                        app:backgroundTint="@color/accent_yellow"
                        app:cornerRadius="20dp" />
                </LinearLayout>
                
                <!-- Do Not Disturb Permission -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    
                    <ImageView
                        android:id="@+id/dndStatusIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_close"
                        android:layout_marginEnd="12dp" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Режим не беспокоить"
                            android:textColor="@color/text_white"
                            android:textSize="14sp" />
                        
                        <TextView
                            android:id="@+id/dndStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Не включено"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dndPermissionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="НАСТРОИТЬ"
                        android:textColor="@color/background_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/mal6lampen"
                        app:backgroundTint="@color/accent_yellow"
                        app:cornerRadius="20dp" />
                </LinearLayout>
                    
                <!-- Write Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    
                    <ImageView
                        android:id="@+id/writeSettingsStatusIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_close"
                        android:layout_marginEnd="12dp" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Изменение системных настроек"
                            android:textColor="@color/text_white"
                            android:textSize="14sp" />
                        
                        <TextView
                            android:id="@+id/writeSettingsStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Не разрешено"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/writeSettingsButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="НАСТРОИТЬ"
                        android:textColor="@color/background_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/mal6lampen"
                        app:backgroundTint="@color/accent_yellow"
                        app:cornerRadius="20dp" />
                </LinearLayout>
                
                <!-- Home Screen Default -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">
                    
                    <ImageView
                        android:id="@+id/homeScreenStatusIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_close"
                        android:layout_marginEnd="12dp" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Рабочий стол по умолчанию"
                            android:textColor="@color/text_white"
                            android:textSize="14sp" />
                        
                        <TextView
                            android:id="@+id/homeScreenStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Не установлен"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/selectHomeScreenButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="НАСТРОИТЬ"
                        android:textColor="@color/background_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/mal6lampen"
                        app:backgroundTint="@color/accent_yellow"
                        app:cornerRadius="20dp" />
                </LinearLayout>
                
                </LinearLayout>
            
            <!-- App Version Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ИLauncher"
                    android:textColor="@color/text_white"
                    android:textSize="20sp"
                    android:fontFamily="@font/lampen"
                    android:layout_marginBottom="4dp" />
                
                <TextView
                    android:id="@+id/appVersionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Версия 3.0"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="© 2025"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
