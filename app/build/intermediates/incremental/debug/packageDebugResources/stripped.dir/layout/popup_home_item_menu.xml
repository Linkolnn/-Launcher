<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:paddingBottom="6dp">
    
    <!-- Menu container with rounded corners -->
    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/popup_menu_background"
        android:elevation="6dp"
        android:padding="4dp">
        
        <!-- Resize widget (only for widgets) -->
        <TextView
            android:id="@+id/menu_resize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменить размер"
            android:textSize="@dimen/popup_menu_text_size"
            android:fontFamily="@font/mal6lampen"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:background="@drawable/simple_menu_selector"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />
            
        <!-- Divider for resize menu -->
        <View
            android:id="@+id/divider_resize"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#4A4A4A"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:visibility="gone" />
        
        <!-- Remove from home screen -->
        <TextView
            android:id="@+id/menu_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Убрать"
            android:textSize="@dimen/popup_menu_text_size"
            android:fontFamily="@font/mal6lampen"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:background="@drawable/simple_menu_selector"
            android:clickable="true"
            android:focusable="true" />
            
        <!-- Divider (will be shown only for apps) -->
        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#4A4A4A"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:visibility="gone" />
        
        <!-- App Info (only for apps) -->
        <TextView
            android:id="@+id/menu_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Информация"
            android:textSize="@dimen/popup_menu_text_size"
            android:fontFamily="@font/mal6lampen"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:background="@drawable/simple_menu_selector"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />
            
        <!-- Divider (will be shown only for apps) -->
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#4A4A4A"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:visibility="gone" />
        
        <!-- Uninstall (only for apps) -->
        <TextView
            android:id="@+id/menu_uninstall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Удалить"
            android:textSize="@dimen/popup_menu_text_size"
            android:fontFamily="@font/mal6lampen"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:background="@drawable/simple_menu_selector"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />
    </LinearLayout>
    
    <!-- Arrow pointing to the icon -->
    <ImageView
        android:id="@+id/menu_arrow"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:src="@drawable/popup_menu_arrow"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-5dp"
        android:scaleType="fitCenter" />
    
</LinearLayout>
