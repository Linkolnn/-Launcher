<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="75dp"
    android:layout_height="wrap_content"
    android:paddingHorizontal="4dp"
    android:paddingVertical="8dp">

    <!-- Icon pack container with selection circle -->
    <FrameLayout
        android:id="@+id/iconPackContainer"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- Circle background -->
        <View
            android:id="@+id/circleBackground"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_circle_icon_pack" />
        
        <!-- Selection ring -->
        <View
            android:id="@+id/selectionRing"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_circle_selection"
            android:visibility="gone" />
        
        <!-- Icon pack icon -->
        <ImageView
            android:id="@+id/iconPackIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />
        
        <!-- Check mark container -->
        <FrameLayout
            android:id="@+id/checkMarkContainer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg_check_circle"
            android:visibility="gone">
            
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_small"
                android:tint="@color/background_dark" />
        </FrameLayout>
    </FrameLayout>

    <!-- Icon pack name -->
    <TextView
        android:id="@+id/iconPackName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="System"
        android:textColor="@color/text_gray"
        android:textSize="10sp"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/iconPackContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
