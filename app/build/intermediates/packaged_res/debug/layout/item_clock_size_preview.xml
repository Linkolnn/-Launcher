<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="210dp"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    
    <!-- Preview container centered -->
    <FrameLayout
        android:id="@+id/previewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_widget_preview"
        android:padding="8dp">
        
        <!-- Actual clock widget preview will be added here programmatically -->
        
    </FrameLayout>
    
    <!-- Size label with yellow background at bottom -->
    <TextView
        android:id="@+id/sizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_size_label"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="2x2"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />
    
</RelativeLayout>
