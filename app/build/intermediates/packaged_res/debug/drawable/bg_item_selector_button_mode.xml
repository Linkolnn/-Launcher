<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Focused state - yellow highlight -->
    <item android:state_focused="true"
          android:drawable="@drawable/bg_item_focused" />
    
    <!-- Selected state - also use yellow highlight -->
    <item android:state_selected="true"
          android:drawable="@drawable/bg_item_focused" />
    
    <!-- Pressed state - slightly darker yellow -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#A0FFD700" /> <!-- 63% transparent yellow -->
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#FFD700" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
    
    <!-- Default state - transparent -->
    <item android:drawable="@drawable/bg_item_normal" />
    
</selector>
