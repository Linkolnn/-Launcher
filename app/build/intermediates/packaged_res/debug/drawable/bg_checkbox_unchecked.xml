<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Inner shadow (black 5%) - for inset effect -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/background_dark" />
            <size android:width="36dp" android:height="36dp" />
        </shape>
    </item>
    
    <!-- Main circle with outer highlight -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="#1A1A1A" />
            <stroke android:width="0.5dp" android:color="#0DFFFFFF" />
            <size android:width="34dp" android:height="34dp" />
        </shape>
    </item>
</layer-list>
