<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Inner shadow (black 5%) - inverted for inset effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_dark" />
            <corners android:radius="100px" />
        </shape>
    </item>
    
    <!-- Outer highlight (white 5%) -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A1A1A" />
            <corners android:radius="99px" />
            <stroke android:width="0.5dp" android:color="#0DFFFFFF" />
        </shape>
    </item>
</layer-list>
