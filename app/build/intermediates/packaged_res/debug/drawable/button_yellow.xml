<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer (outer shadow) -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Main button -->
    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_yellow" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</layer-list>
